            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="textBoxshowhello12" HorizontalAlignment="Left" Height="23" Margin="75,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="382"/>
        <Button x:Name="buttonclicksayhello12" Content="clicksayhello12" HorizontalAlignment="Left" Margin="75,117,0,0" VerticalAlignment="Top" Width="382" Height="24" Click="buttonclicksayhello12_Click"/>

    </Grid>
